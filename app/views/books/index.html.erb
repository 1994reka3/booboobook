<div class="row justify-content-center">
  <div class="mx-auto">
    <h1>本棚</h1>
    <div class="py-3 mb-4 d-grid gap-1 col-6 mx-auto">
      <%= link_to '本を登録する', new_user_book_path, class: "btn btn-primary" %>
    </div>
    <div class="py-1 mb-2 d-grid gap-1 col-6 mx-auto">
    <%=link_to '登録している本一覧', new_user_book_path, class:"btn list-btn-primary"%>
    </div>
    <hr class="linebook">
    <div class="row justify-content-md-center">
      <% @books.each do |book| %>
        <div class="row">
          <div class="col-2">
            <%= link_to user_book_path(current_user, book) do %>
              <div class="book-place">
                <i class="fas fa-book fa-3x"></i>
              </div>
            <% end %>
          </div>
          <div class="col-10">
            <div class="row">
              <div class="col-6 text-break">
                <h4><%= book.book_name %></h4>
              </div>
              <div class="col-3">  <%# ステータスによってバッチの色を変更する %>
                <% if book.status == "未読" %>
                  <span class="badge bg-gray">未読</span>
                <% elsif book.status == "読書中" %>
                  <span class="badge bg-pink">読書中</span>
                <% else %>
                  <span class="badge bg-navy">読了</span>
                <% end %>
              </div>
              <div class="col-3">
                <p><%= book.total_read_time_sec.utc.strftime('%R') %></p>
              </div>
            </div>
            <div class="row">
              <div class="col-12 text-break">
                <div class="memobox">
                <p><%= book.memo %></p>
                </div>
              </div>
            </div>
          </div>
          <hr class="linebook">
        </div>
      <% end %>
    </div>
    <%# ページネーション %>
    <div class="pagination justify-content-center">
      <%= paginate @books %>
    </div>

  </div>
</div>
