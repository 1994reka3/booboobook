<h1>本棚</h1>
<div class="d-grid gap-2 col-6 mx-auto">
<%=link_to '本を追加する', new_user_book_path, class:"btn btn-primary"%>
</div>
<p>
<div class="d-grid gap-2 col-6 mx-auto">
<%=link_to '登録している本一覧', new_user_book_path, class:"btn list-btn-primary"%>
</div>
<hr class="linebook">
<ul>
  <% @books.each do |book| %>    
    <%= link_to book.id, user_book_path(id: current_user) %>
    <div class="booktitle">タイトル：<%= book.book_name %></div>
    <div class="d-grid gap-2 col-2 mx-auto">
    <div class="btn status-btn-primary">未読<%= book.status %></div>
    </div>
    <div class="readtime">読書時間：<%= book.total_read_time %></div>
    <div class="bookmemo">メモ：<%= book.memo %></div>
  <% end %>
</ul>
<%= paginate @books %>