

<div class="container">

  <div class="row justify-content-center">
    <div class="col-md-5">
      <h3 class="mt-3 mb-3"></h3>

      

        <%= form_with model: @user, url: user_registration_path, local: true, class: '' do |f| %>
        <div class="form-group row">
          <%= f.label :name, "", class: " col-form-label text-md-left" do %>
            アカウント名
            <span>【必須】</span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.text_field :name,
              class: "form-control #{"is-invalid" if @user.errors.messages[:name].present? }",
              autofocus: "true",
              required: "",
              autocomplete: "name"
              
            %>

            <% if @user.errors.messages[:name].present? %>
              <span class="">
                <strong><%= @user.errors.full_messages_for(:name).first %></strong>
              </span>
            <% end %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :email, "", class: " col-form-label text-md-left" do %>
          メールアドレス
            <span class="ml-1">
              <span class="">【必須】</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.email_field :email,
              class: "form-control #{"is-invalid" if @user.errors.messages[:email].present? }",
              autofocus: "true",
              required: "",
              autocomplete: "email"
              
            %>

            <% if @user.errors.messages[:email].present? %>
              <strong><%= @user.errors.full_messages_for(:email).first %></strong>
            <% end %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, "", class: " col-form-label text-md-left" do %>
          パスワード
            <span class="ml-1">
              <span class="">【必須】</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.password_field :password,
              class: "form-control #{ "is-invalid" if @user.errors.messages[:password].present? }",
              autofocus: "true"
            %>
            <% if @user.errors.messages[:password].present? %>
              <strong><%= @user.errors.full_messages_for(:password).first %></strong>
            <% end %>
            </div>
          </div>

        <div class="form-group row">
          <%= f.label :password_confirmation, "", class: " col-form-label text-md-left" do %>
          パスワード（確認用）
          <% end %>
          <div class="col-md-7">
            <%=
              f.password_field :password_confirmation,
              class: "form-control",
              autocomplete: "new-password"
            %>
          </div>
        </div>

        <div class="form-group py-3 d-grid gap-1 col-4 mx-auto">
          <%=  f.submit "アカウント登録", class: "btn btn-primary btn-pink"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
